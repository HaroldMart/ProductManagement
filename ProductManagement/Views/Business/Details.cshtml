@{
    ViewData["Title"] = "Detalles de Negocio";
    bool count = false;
}
@model ProductManagement.Core.Application.ViewModels.Business.BusinessViewModel;

<div class="business-details">
    <div class="d-flex justify-content-between flex-wrap">
        <h3 class="display-6">Detalles</h3>
        <div class="buttons">
            <a asp-route-id="@Model.Id" type="button" asp-action="Edit" class="btn btn-success text-white" style="height: 40px;">Editar</a>
            <a asp-route-id="@Model.Id" type="button" asp-action="Delete" class="btn btn-danger text-white" style="height: 40px;">Eliminar</a>
        </div>
    </div>


    <div class="business-container d-flex gap-5 flex-wrap mt-4">
        <div class="image">
            <img src="@Model.Image"/>
        </div>
        <div class="info d-flex flex-column">
            <h2>@Model.Name</h2>
            <p class="mt-5"><b>Categorias: </b>@Model.CategoriesCount</p>
        </div>
    </div>
</div>

@{
    if (Model.Categories != null && Model.Categories.Count > 0) { count = true; }

    <div class="">
        <h3 class="">Categorias</h3>
        <a type="button" asp-controller="Category" asp-route-Id="" asp-action="Save" class="btn btn-info text-white" style="height: 40px;">Agregar una categoria</a>
    
        @{
            if(count)
            {
                @await Html.PartialAsync("~/Views/Shared/Components/Category/_List.cshtml",
                 Model.Categories, new ViewDataDictionary(ViewData)
                 { { "businessId", Model.Id } })
            }
            else 
            {
                <p>No tienes categorias, agrega una!!</p>
            }
        }
    </div>

    <div class="">
        <h3 class="">Productos</h3>
        <a type="button" asp-controller="Product" asp-route-Id="" asp-route-businessId="@ViewData["businessId"]" asp-action="Save" class="btn btn-info text-white" style="height: 40px;">Agregar un producto</a>
        @{
            if (count)
            {
                @await Html.PartialAsync("~/Views/Shared/Components/Product/_List.cshtml", ViewBag.Products, new ViewDataDictionary(ViewData)
                { { "businessId", Model.Id } })
            }
            else
            {
                <p>No tienes productos, agrega uno!!</p>
            }
        }
     </div>
}

<style>
    .business-details {
        font-size: 18px;
    }

    .business-details .business-container .image {
        width: 700px;
    }

    .business-details .business-container .image img {
        width: 100%;
            border-radius: 10px;
    }
</style>
