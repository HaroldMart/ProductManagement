@{
    ViewData["Title"] = "Delete Product";
}
@model ProductManagement.Core.Application.ViewModels.Business.BusinessViewModel;

<div class="delete">
    <div class="d-flex justify-content-between flex-wrap">
        <h3 class="display-6">Estas seguro que quieres eliminar este negocio?</h3>
        <form method="post" asp-controller="Business" asp-action="DeletePost">
            <input hidden asp-for="Id"/>
            <button type="submit" class="btn btn-info text-white" style="height: 40px;">Eliminar negocio</button>
            <a type="button" class="btn btn-danger text-white" asp-action="Index">Cancelar</a>
        </form>
    </div>
</div>