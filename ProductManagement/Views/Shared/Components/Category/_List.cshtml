@{
    ViewData["Title"] = "Categorias";
}
@model List<ProductManagement.Core.Application.ViewModels.Category.CategoryViewModel>;

<div class="categories">
    <div class="products-container d-flex flex-wrap gap-3">
        @foreach (var item in Model)
        {
            @await Html.PartialAsync("~/Views/Shared/Components/Category/_Category.cshtml", item);
        }
    </div>
</div>


