@model ProductManagement.Core.Application.ViewModels.CategoryViewModel;

<div class="card card-category" style="width: 18rem;border-radius:10px;">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">Productos: @Model.Products.Count()</p>
    </div>
</div>

<style>
        .card-category {
            transition: all 300ms;
            border: 0;
        }

        .card-category .card-body{
            padding: 0;
        }

        .card-category:hover {
            transform: scale(0.98);
        }
</style> 